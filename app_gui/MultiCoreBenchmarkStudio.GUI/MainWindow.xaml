<Window x:Class="MultiCoreBenchmarkStudio.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MultiCore Benchmark Studio"
        Height="500" Width="800"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="MultiCore Benchmark Studio"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="0,0,0,10"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Language:" Width="80"/>
            <ComboBox x:Name="LanguageCombo" Width="150" SelectedIndex="0">
                <ComboBoxItem Content="C"/>
                <ComboBoxItem Content="Rust"/>
                <ComboBoxItem Content="Java (Native)"/>
            </ComboBox>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Algorithm:" Width="80"/>
            <ComboBox x:Name="AlgCombo" Width="150" SelectedIndex="0">
                <ComboBoxItem Content=" Sum Squares"/>
                <ComboBoxItem Content=" Matrix Multiply"/>
                <ComboBoxItem Content=" Monte Carlo"/>
                <ComboBoxItem Content=" Merge Sort"/>
                <ComboBoxItem Content=" FFT"/>
            </ComboBox>
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Threads:" Width="80"/>
            <TextBox x:Name="ThreadsBox" Width="80" Text="8"/>

            <TextBlock Text="Size:" Width="50" Margin="10,0,0,0"/>
            <TextBox x:Name="SizeBox" Width="120" Text="1000000"/>

            <TextBlock Text="Runs:" Width="50" Margin="10,0,0,0"/>
            <TextBox x:Name="RunsBox" Width="50" Text="1"/>

            <Button Content="Run Benchmark"
                    Width="140"
                    Margin="20,0,0,0"
                    Click="RunBenchmark_Click"/>
        </StackPanel>

        <TextBox x:Name="StatusBox"
                 Grid.Row="4"
                 Text="Status output..."
                 IsReadOnly="True"
                 VerticalScrollBarVisibility="Auto"/>
    </Grid>
</Window>
